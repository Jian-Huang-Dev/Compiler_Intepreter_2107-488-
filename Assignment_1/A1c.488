% main program
{    
    % declaration
    var num1 : integer
    var num2 : integer
    
    % statements
    num1 := 1
    num2 := 10
    
    % if-then
    if num1 < num2
    then exit
    
    % if-then-else
    if num1 < num2
    then exit
    else num1 := num1 + 1
    
    % while-do loop
    while num1 < num2
    do num1 := num1 + 1
    
    % repeat-until loop
    repeat num1 := num1 + 1
    until num1 > num2
    
    % while-do loop, and use exit 1
    while true
    do {
    num1 := num1 + 1
    if num1 > num2
    then exit
    }
    
    % 2 while-do loops, and use exit 2
    while true
    do {
    num1 := num1 + 2
    while true 
    do {
    num2 := num2 + 1
    if num2 > 100
    exit 2
    }
    }

    % exit-when statement    
    exit when true
    
    % 2 while-do loops, and use exit-integer-when-expression statement
    while true
    do {
    num1 := num1 + 2
    while true 
    exit 2 when true
    }
}